<Window x:Class="WeatherWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="cityLabel" Content="City: " HorizontalAlignment="Left" Margin="590,125,0,0" VerticalAlignment="Top"/>
        <Label x:Name="TempLabel" Content="Temperature (Celsius):" HorizontalAlignment="Left" Margin="500,156,0,0" VerticalAlignment="Top"/>
        <Label x:Name="WindLabel" Content="Wind (kmh):" HorizontalAlignment="Left" Margin="552,187,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="CityTextbox" HorizontalAlignment="Left" Margin="173,217,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148" FontSize="14"/>
        <Label Content="City" HorizontalAlignment="Left" Margin="232,191,0,0" VerticalAlignment="Top"/>
        <Button x:Name="fetchButton" Content="Retrieve data" HorizontalAlignment="Left" Margin="211,251,0,0" VerticalAlignment="Top" Click="getWeather"/>

    </Grid>
</Window>
